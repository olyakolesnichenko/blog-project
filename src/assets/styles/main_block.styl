main
  grid-column 1
  grid-row 1/3
  margin-right 10px
  display grid
  grid-template-columns repeat(auto-fill, minmax(300px, 1fr))
  grid-gap 10px
  @media (max-width 767px)
    grid-column 1
    grid-row 2
    margin 10px 0
  .blog-item
    display flex
    flex 1 30%
    min-width 300px
    padding 10px
    border 1px solid light_blue_color
    border-radius 5px
    background-color lighten(light_blue_color, 90%)