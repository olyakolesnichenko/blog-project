*
  box-sizing border-box
html
  height 100%
body
  min-height 100%
  display grid
  grid-template-rows 1fr auto
.container
  width 80%
  max-width 1200px
  margin 0 auto
  @media (max-width 767px)
    width 95%
.row
  display flex
  @media (max-width 767px)
    flex-direction column
.desktop
  @media (max-width 767px)
    display none
.main-wrapper
  display grid
  grid-template-columns 1fr 200px
  grid-template-rows auto auto
  margin 10px auto
  @media (max-width 767px)
    grid-template-columns 100%
    grid-template-rows auto



