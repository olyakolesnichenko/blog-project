header
  padding 5px 0
  color #fff
  background-color dark_blue_color
  .row
    justify-content space-between
  .logo
    display block
    background url("../assets/images/harry-potter-logo.png") no-repeat
    background-size contain
    width 120px
    height auto
    min-height 100px
    @media (max-width 767px)
      width 100%
      background-position 50%
  .right-block
    display flex
    flex-direction column
    justify-content space-around
    @media (max-width 767px)
      flex-direction row-reverse
    >div
      align-self flex-end
      @media (max-width 767px)
        align-self center

.social
  .fa-stack
    color light_blue_color
    &:hover
      color darken(light_blue_color, 20%)
    @media (max-width 767px)
      display none
    &.search
      margin-right 30px
      @media (max-width 767px)
        display inherit
        margin-right 0
.menu-wrapper
  position relative
  left -22%
  z-index 1
  >span
    display: none
    @media (max-width 767px)
      display: block
      width: 33px
      height: 4px
      left 5px
      margin-bottom: 5px
      position: relative
      background: light_blue_color
      border-radius: 3px
      z-index: 1
      transform-origin: 4px 0px
      transition: transform 0.5s cubic-bezier(0.77,0.2,0.05,1.0),
            background 0.5s cubic-bezier(0.77,0.2,0.05,1.0),
            opacity 0.55s ease
      &:first-child
        transform-origin: 0% 0%
      &:nth-last-child(2)
        transform-origin: 0% 100%
  >input
    display block
    width 40px
    height 32px
    position absolute
    top -7px
    left -5px
    cursor pointer
    opacity 0
    z-index 2
    -webkit-touch-callout: none
    &:checked ~ span
      opacity: 1
      transform: rotate(45deg) translate(-2px, -1px);
      background: #232323
      &:nth-last-child(3)
        opacity: 0
        transform: rotate(0deg) scale(0.2, 0.2)
      &:nth-last-child(2)
        transform: rotate(-45deg) translate(0, -1px)
    &:checked ~ ul
      height 100vh
      transform none
      display flex

.menu
  display flex
  li
    a
      padding 5px 20px
      color #fff
      text-decoration none
      &:hover
        color darken(#fff, 10%)
        text-decoration underline
      &:last-child
        padding-right 0
  &.main-menu
    @media (max-width 767px)
      display none
      flex-direction column
      position: absolute
      width: 300px
      height 100vh
      margin: -50px 0 0 0
      padding: 50px
      background: #ededed
      list-style-type: none
      -webkit-font-smoothing: antialiased
      transform-origin: 0% 0%
      transform: translate(-100%, 0)
      transition: transform 0.5s cubic-bezier(0.77,0.2,0.05,1.0)
    li
      @media (max-width 767px)
        padding-top 10px
      >a
        @media (max-width 767px)
          color dark_blue_color
          font-size 18px
          text-decoration none
          &:hover
            color darken(dark_blue_color, 10%)
            text-decoration underline


